<Page
    x:Class="App.Pages.Menus.ManageRecordsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:App.Pages.Menus"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:App.ViewModels"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid Padding="10,0,10,0" Background="{ThemeResource LayerOnMicaBaseAltFillColorDefaultBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid
            Grid.Row="0"
            Padding="0,5,0,5"
            Background="{ThemeResource LayerOnMicaBaseAltFillColorTertiaryBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="50" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Column="0"
                HorizontalAlignment="Left"
                Text="Sold At" />

            <TextBlock
                Grid.Column="1"
                HorizontalAlignment="Center"
                Text="Price" />

            <TextBlock
                Grid.Column="2"
                HorizontalAlignment="Center"
                Text="Quantity" />
        </Grid>

        <ScrollViewer Grid.Row="1" Margin="0,5,0,5">
            <ItemsRepeater x:Name="IvRecords" VerticalAlignment="Stretch">
                <ItemsRepeater.ItemTemplate>
                    <DataTemplate x:DataType="vm:RecordViewModel">
                        <Grid Margin="0,5,0,5" Unloaded="OnUnloaded">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1.5*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="50" />
                            </Grid.ColumnDefinitions>

                            <TextBlock
                                Grid.Column="0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Text="{x:Bind TimestampText}" />
                            <TextBlock
                                Grid.Column="1"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Text="{x:Bind PriceText}" />
                            <TextBlock
                                Grid.Column="2"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Text="{x:Bind QuantityText}" />
                            <Button
                                Grid.Column="3"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                Background="Transparent"
                                BorderThickness="0"
                                Click="OnDeleteButtonClicked">
                                <SymbolIcon Symbol="Delete" />
                            </Button>
                        </Grid>
                    </DataTemplate>
                </ItemsRepeater.ItemTemplate>
            </ItemsRepeater>
        </ScrollViewer>

        <CommandBar
            Grid.Row="2"
            DefaultLabelPosition="Right"
            OverflowButtonVisibility="Collapsed">
            <AppBarButton
                Click="OnClearAppBarButtonClicked"
                Foreground="Red"
                Icon="Clear"
                Label="Clear" />
            <AppBarButton
                Click="OnExportExcelAppBarButtonClicked"
                Icon="Share"
                Label="Export Excel" />
        </CommandBar>
    </Grid>
</Page>
