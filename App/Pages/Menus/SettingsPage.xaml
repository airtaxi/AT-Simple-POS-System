<Page
    x:Class="App.Pages.Menus.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ic="using:FluentIcons.WinUI"
    xmlns:local="using:App.Pages.Menus"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Padding="4"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <StackPanel Spacing="12">
        <StackPanel Spacing="4">
            <TextBlock
                x:Uid="/SettingsPage/ApplicationSettingsTextBlock"
                Margin="0,0,0,4"
                Style="{ThemeResource BodyStrongTextBlockStyle}" />
            <controls:SettingsCard x:Uid="/SettingsPage/LanguageSettingsCard" HeaderIcon="{ic:SymbolIcon Symbol=LocalLanguage}">
                <ComboBox x:Name="LanguageComboBox" SelectionChanged="OnLanguageComboBoxSelectionChanged">
                    <ComboBoxItem Content="English" Tag="English" />
                    <ComboBoxItem Content="한국어" Tag="Korean" />
                </ComboBox>
            </controls:SettingsCard>
        </StackPanel>

        <StackPanel Loaded="OnUpdateNeedElementLoaded" Spacing="4">
            <TextBlock
                x:Uid="/SettingsPage/DataDeletionSettingsTextBlock"
                Margin="0,0,0,4"
                Style="{ThemeResource BodyStrongTextBlockStyle}" />
            <controls:SettingsCard
                x:Uid="/SettingsPage/ClearRecordsSettingsCard"
                HeaderIcon="{ic:SymbolIcon Symbol=Delete}"
                Loaded="OnUpdateNeedElementLoaded">
                <Button
                    x:Uid="/SettingsPage/ClearRecordsButton"
                    Click="OnClearRecordsButtonClicked"
                    Foreground="Red"
                    Loaded="OnUpdateNeedElementLoaded" />
            </controls:SettingsCard>
            <controls:SettingsCard
                x:Uid="/SettingsPage/ClearItemsSettingsCard"
                HeaderIcon="{ic:SymbolIcon Symbol=Delete}"
                Loaded="OnUpdateNeedElementLoaded">
                <Button
                    x:Uid="/SettingsPage/ClearItemsButton"
                    Click="OnClearItemsButtonClicked"
                    Foreground="Red"
                    Loaded="OnUpdateNeedElementLoaded" />
            </controls:SettingsCard>
        </StackPanel>

        <StackPanel Loaded="OnUpdateNeedElementLoaded" Spacing="4">
            <TextBlock
                x:Uid="/SettingsPage/DataManagementSettingsTextBlock"
                Margin="0,0,0,4"
                Style="{ThemeResource BodyStrongTextBlockStyle}" />
            <controls:SettingsCard
                x:Uid="/SettingsPage/ImportSettingsCard"
                HeaderIcon="{ic:SymbolIcon Symbol=ArrowDownload}"
                Loaded="OnUpdateNeedElementLoaded">
                <Button
                    x:Uid="/SettingsPage/ImportSettingsButton"
                    Click="OnImportSettingsButtonClicked"
                    Loaded="OnUpdateNeedElementLoaded" />
            </controls:SettingsCard>
            <controls:SettingsCard
                x:Uid="/SettingsPage/ExportSettingsCard"
                HeaderIcon="{ic:SymbolIcon Symbol=ArrowExportUp}"
                Loaded="OnUpdateNeedElementLoaded">
                <Button
                    x:Uid="/SettingsPage/ExportSettingsButton"
                    Click="OnExportSettingsButtonClicked"
                    Loaded="OnUpdateNeedElementLoaded" />
            </controls:SettingsCard>
        </StackPanel>
    </StackPanel>
</Page>
